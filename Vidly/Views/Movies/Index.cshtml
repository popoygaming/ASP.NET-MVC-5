<p>
    @Html.ActionLink("New Movie", "New", "Movies", null, new { @class = "btn btn-primary" })
</p>

<table id="moviesTable" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @* loading of data done by ajax *@
        @*@foreach (var movie in Model.Movies)
            {
                <tr>
                    <td><a href="~/Movies/Edit/@movie.Id">@movie.Name</a></td>
                    <td>@movie.Genre</td>
                </tr>
            }*@
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {

            // render data table
            var table = $("#moviesTable").DataTable({
                ajax:
                    {
                        url: "/api/movies",
                        dataSrc: ""
                    },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, movie) {
                            return "<a href='/Movies/Edit/" + movie.id + "'>" + movie.name + "</a>";
                        }
                    },
                    {
                        data: "genre"
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn btn-link js-delete' data-movie-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });

            // delete function
            $("#moviesTable").on("click", ".js-delete", function () {
                var button = $(this);
                bootbox.confirm("Are you sure you want to delete this movie?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/movies/" + button.attr("data-movie-id"),
                            method: "DELETE",
                            success: function () {
                                //console.log("Success");
                                table.row(button.parents("tr")).remove().draw();
                            }
                        });

                    }
                });
            });

        });

    </script>
}


