@model Vidly.ViewModels.CustomerViewModel

@{
    ViewBag.Title = @Model.Customer.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@Model.Customer.Name</h2>
@if (Model.Customer != null)
{
    <ul>
        <li>MembershipType: @Model.Customer.MembershipType.Name</li>
        @if (Model.Customer.Birthday != null)
        {
            <li>Birthday: @Model.Customer.Birthday</li>
        }
    </ul>
}
